{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@": ["./src"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "include": ["src", "tests", "scripts"],
  "exclude": ["tests/fixtures"]
}
